// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "features": {
    "edit_prediction_provider": "none"
  },
  "base_keymap": "VSCode",
  "vim_mode": false,
  "ui_font_size": 14,
  "buffer_font_size": 14,
  "tab_size": 2,
  "show_whitespaces": "all",
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "icon_theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha"
  },
  "wrap_guides": [80],
  "file_types": {
    "Helm": ["**/helmfile.d/**/*.yaml", "**/*.gotmpl", "**/*.tmpl"],
    "Dockerfile": ["Dockerfile*"],
    "JSON": [".prettierrc"]
  },
  "auto_signature_help": false,
  "inlay_hints": {
    "enabled": false
  },
  "diagnostics": {
    "include_warnings": false,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 150,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  },
  "auto_install_extensions": {
    "catppuccin": true,
    "catppuccin-icons": true,
    "codebook": true,
    "dockerfile": true,
    "docker-compose": true,
    "html": true,
    "ini": true,
    "git-firefly": true,
    "helm": true,
    "java": true,
    "just": true,
    "make": true,
    "one-dark-pro": true,
    "php": true,
    "prisma": true,
    "pylsp": true,
    "sql": true,
    "svelte": true,
    "terraform": true,
    "toml": true,
    "vscode-dark-modern": true
  },
  "format_on_save": "on",
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        }
      }
    },
    "vtsls": {
      "settings": {
        "javascript": {
          "preferences": {
            "importModuleSpecifier": "relative"
          }
        },
        "typescript": {
          "preferences": {
            "importModuleSpecifier": "relative"
          }
        }
      }
    }
  }
}
